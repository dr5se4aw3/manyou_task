<div class="form_container">
  <h1>ラベル作成</h1>
  <%= form_with(model: @label, local: true, url: admin_labels_path) do |form| %>
    <% if @label.errors.any? %>
      <div id="error_explanation">
        <h2><%= @label.errors.count %> 件のエラーがあります</h2>

        <ul>
        <% @label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form_main">

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
</div>
<% end %>
