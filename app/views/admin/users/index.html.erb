<h1><%= t "users.#{action_name}.title" %></h1>

<div class="task_table">
  <table class="table">
    <thead>
      <tr>
        <th><%= User.human_attribute_name('id') %></th>
        <th><%= User.human_attribute_name('admin') %></th>
        <th><%= User.human_attribute_name('name') %></th>
        <th><%= User.human_attribute_name('email') %></th>
        <th>タスク数</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td id="<%= user.name %>"><%= user.id %></td>
          <td id="<%= user.name %>"><%= user.admin ? :管理者 : :一般%></td>
          <td id="<%= user.name %>"><%= user.name %></td>
          <td id="<%= user.name %>"><%= user.email %></td>
          <td id="<%= user.name %>"><%= user.tasks.count %></td>
          <td><%= link_to 'Show', admin_user_path(user.id) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
          <td id="destroy_<%= user.name %>"><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
