<!DOCTYPE html>
<html>
  <head>
    <title>TaskmanagerA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="header_container">
      <h2>Task manager</h2>
      <div class="header_right">
        <% if logged_in? %>
          <%= link_to "プロフィール", user_path(current_user.id), class: "btn btn-info btn-lg" %>
          <%= link_to "ログアウト", session_path(current_user.id), method: :delete , class: "btn btn-danger btn-lg" %>
          <%= link_to 'タスク一覧', tasks_path, class: "btn btn-primary btn-lg"  %>
          <%= link_to '新規タスク', new_task_path, class: "btn btn-primary btn-lg"  %>
        <% else %>
          <%= link_to "ユーザー登録", new_user_path, class: "btn btn-info btn-lg"  %>
          <%= link_to "ログイン画面", new_session_path, class: "btn btn-primary btn-lg"  %>
        <% end %>
      </div>
    </div>
    </header>
    <main>
      <div class="container-fluid">
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </div>
    </main>
    <footer>
      <% if logged_in? %>
        <% if admin_user? %>
          <h2>管理者用メニュー</h2>
          <%= link_to "ユーザー一覧", admin_users_path, class: "btn btn-info btn-lg"  %>
          <%= link_to "プロフィール", admin_user_path(current_user.id), class: "btn btn-info btn-lg" %>
          <%= link_to "ユーザー登録", new_admin_user_path, class: "btn btn-info btn-lg"  %>
          <%= link_to 'タスク一覧', tasks_path, class: "btn btn-primary btn-lg"  %>
          <%= link_to "ラベル作成", new_admin_label_path, class: "btn btn-info btn-lg"  %>
        <% end %>
      <% end %>
    </footer>
  </body>
</html>
