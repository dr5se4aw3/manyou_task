<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= task.errors.count %> 件のエラーがあります。</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_task">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="form_task">
    <%= form.label :detail %>
    <%= form.text_field :detail %>
  </div>
  <div class="form_task">
    <%= form.label :deadline %>
    <%= form.date_field :deadline, value:"#{Date.today}" %>
  </div>
  <div class="form_task">
    <%= form.label :status %>
    <%= form.select :status, ['未着手', '着手中', '完了'] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
