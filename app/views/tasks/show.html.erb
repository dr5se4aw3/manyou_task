<div class="col-md-offset-3 col-md-6">
  <h1><%= t "tasks.#{action_name}.title" %></h1>
  <div class="row">
    <div class="col-md-12 form_main">
      <table class="table table-borderless">
        <tr class="row">
          <td class="col-md-2"><%= Task.human_attribute_name :title %></td>
          <td class="col-md-10" id="title"><%= @task.title %></td>
        </tr>
        <tr class="row">
          <td class="col-md-2"><%= Task.human_attribute_name :detail %></td>
          <td class="col-md-10" id="detail"><%= @task.detail %></td>
        </tr>
        <tr class="row">
          <td class="col-md-2"><%= Task.human_attribute_name :deadline %></td>
          <td class="col-md-10" id="deadline"><%= @task.deadline %></td>
        </tr>
        <tr class="row">
          <td class="col-md-2"><%= Task.human_attribute_name :status %></td>
          <td class="col-md-10" id="status"><%= @task.status %></td>
        </tr>
        <tr class="row">
          <td class="col-md-2"><%= Task.human_attribute_name :priority %></td>
          <td class="col-md-7" id="priority"><%= @task.priority %></td>
        </tr>
        <tr class="row">
          <td>ラベル</td>
            <td class="col-md-2">
              <table>
                <% @labels.each do |label| %>
                  <tr>
                    <td><%= label.title %></td>
                  </tr>
                <% end %>
              </table>
            </td>
        </tr>
      </table>
    </div>
  </div>
  <%= link_to 'Edit', edit_task_path(@task) %> |
  <%= link_to 'Back', tasks_path %>
</div>
