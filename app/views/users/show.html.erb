
<div class="profile_container">
  <p>
    <strong><%= User.human_attribute_name :name %>:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name :email %>:</strong>
    <%= @user.email %>
  </p>

  <p>
    <%= link_to 'ユーザー情報を編集', edit_user_path(@user.id), class: "btn btn-info" %> |
    <%= link_to 'ユーザー情報を削除する', @user, method: :delete, data: { confirm: '本当に削除しますか？' } %>
  </p>
</div>
